@model IEnumerable<AutoRent.Models.Car>

@{
    ViewData["Title"] = "Index";
}
<body>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-2">
                <div class="rent-item  mb-4">
                    <img class="img-fluid mb-4" src="@Url.Content(item.CarLogo)" alt="">
                    <h4 class="text-uppercase mb-4">@item.CarDesc</h4>
                    <div class="d-flex justify-content-center mb-4">
                        <div class="px-2">
                            <i class="fa fa-car text-primary mr-1"></i>
                            <span>@item.ProdYear</span>
                        </div>
                        <div class="px-2 border-left border-right">
                            <i class="fa fa-cogs text-primary mr-1"></i>
                            <span>@item.GearType</span>
                        </div>
                        <div class="px-2">
                            <i class="fa fa-road text-primary mr-1"></i>
                            <span>@item.Price $/Day</span>
                        </div>
                    </div>
                    <a class="btn btn-primary px-3" asp-action="Login" asp-controller="Account" asp-area="">Login To Reserve</a>
                    <a class="btn btn-primary px-3" asp-action="Index" asp-controller="CarReviews" asp-route-id="@item.CarId" asp-area="User">Car Reviews</a>

                </div>
            </div>
        }
    </div>
</body>

