@model IEnumerable<AutoRent.Models.ApplicationRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.identityRole.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdsNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicsNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.identityRole.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdsNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PicsNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@Url.Content(item.RoleImg)" width="50px" height="50px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApplicationRoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApplicationRoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApplicationRoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
